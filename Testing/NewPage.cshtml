@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "Another Testing Page";
}



<style>
        body{
            text-align: center;
            font-size: 20px;
        }

        a{
            color:#0000f9;
        }

        .box{
            margin:0 auto;
            width:100px;
            height:100px;
            background: orange;
        }

        .button{
            padding:5px 10px;
            margin:30px;
            font-size:16px;
            font-weight: bold;
            padding:5px 10px;     
                  
        }
        
        
    </style>


<body>
        
        <input type="button" class="button" value=" Run transition effect" /> 
        <div class="box"></div>

    <!-- 
        We use Google's CDN to serve the jQuery js libs. 
        To speed up the page load we put these scripts at the bottom of the page 
    -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
    <!-- you can get latest version of the plugin from here: http://ricostacruz.com/jquery.transit/ -->
    <script src="jquery.transit.min.js"></script>

    <script>

        //DOM loaded 
        $(document).ready(function() {

            //set angle to 0
            var deg = 0;

            //on button click we increase the angle and run the transition effect
            $('.button').click(function(){
                
                //increase angle by 25                
                deg += 25;
                
                //run the effect
                $('.box').transition({ rotate: deg + 'deg' });           
            });

        });

    </script>

    </body>